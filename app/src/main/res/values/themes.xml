<resources>
    <style name="Theme.FlexingFreeGames" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/dark_gray_70</item>
        <item name="colorPrimaryVariant">@color/dark_gray_70</item>
        <item name="colorOnPrimary">@color/gray_70</item>

        <item name="colorAccent">@color/white</item>

        <item name="colorSurface">@color/dark_gray_40</item>
        <item name="colorOnSurface">@color/gray_70</item>

        <item name="android:colorBackground">@color/dark_gray_80</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:drawableTint">@color/white</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/gray_70</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMediumStyle">
        <item name="android:textSize">@dimen/size_text_medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextSmallStyle">
        <item name="android:textSize">@dimen/size_text_small</item>
    </style>

    <style name="TextClickableStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_text_action</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="elevation">@dimen/elevation</item>
    </style>
</resources>